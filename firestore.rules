rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access for data needed by the booking form
    match /routes/{routeId} {
      allow read: if true;
      allow write: if request.auth != null; // Only admins can write
    }

    match /buses/{busId} {
      allow read: if true;
      allow write: if request.auth != null; // Only admins can write
    }
    
    match /referrals/{referralId} {
      allow read: if true;
      allow write: if request.auth != null; // Only admins can write
    }
    
    match /pending_bookings/{bookingId} {
      // Allow anyone to create a pending booking
      allow create: if true;
      // Allow admins to read/delete pending bookings
      allow read, delete: if request.auth != null;
    }
    
    match /bookings/{bookingId} {
        // Allow public read for confirmation page, but only for their own booking
        allow read: if true; // Simplification for now, server validates on callback
        // Admins can manage all bookings
        allow read, write, delete: if request.auth != null;
    }
    
     match /passengers/{passengerId} {
        // Only admins can manage passenger data
        allow read, write, delete: if request.auth != null;
     }

    // Secure all other collections to be admin-only by default
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}