
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is an authenticated admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Super-Admin'];
    }

    // Admins can read and write all collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Allow logged-in users to be read for user role checks in layouts
    match /users/{userId} {
      allow get: if request.auth != null;
    }

    // Allow server-side processes (like payment initiation) to read settings
    // This is a more open rule but is safe as it's for a single, non-sensitive config document.
    match /settings/hubtel {
      allow get: if true;
    }
  }
}
