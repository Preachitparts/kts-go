
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is an admin or super-admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Super-Admin'];
    }

    // Public collections needed for the main booking form (read-only)
    match /regions/{document=**} {
      allow get, list: if true;
    }
    match /routes/{document=**} {
      allow get, list: if true;
    }
    match /buses/{document=**} {
      allow get, list: if true;
    }
    match /sessions/{document=**} {
      allow get, list: if true;
    }
    match /referrals/{document=**} {
      allow get, list: if true;
    }

    // Allow any authenticated user (i.e., any logged-in admin) to read any document.
    // The admin panel's auth flow already prevents non-admins from logging in.
    match /{document=**} {
       allow read: if request.auth != null;
       allow write: if isAdmin(); // Only admins can write.
    }
  }
}
