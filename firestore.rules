
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is an admin or super-admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Super-Admin'];
    }

    // Public collections needed for the main booking form (read-only)
    match /regions/{document=**} {
      allow get, list: if true;
    }
    match /routes/{document=**} {
      allow get, list: if true;
    }
    match /buses/{document=**} {
      allow get, list: if true;
    }
    match /sessions/{document=**} {
      allow get, list: if true;
    }
    match /referrals/{document=**} {
      allow get, list: if true;
    }

    // Allow anyone to create a pending booking. This is safe as it's a temporary hold.
    match /pending_bookings/{bookingId} {
      allow create: if true;
    }

    // Allow anyone to read from the final bookings collection. 
    // This is needed for the user to view their ticket on the confirmation page.
    // The page logic already ensures they can only query by their own unique reference.
    match /bookings/{bookingId} {
        allow get, list: if true;
    }
    
    // All other collections are protected.
    // Admins can read anything.
    match /{document=**} {
       allow read: if request.auth != null && isAdmin();
       allow write: if request.auth != null && isAdmin(); // Only admins can write.
    }
  }
}
