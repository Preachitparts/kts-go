
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- PUBLIC READS for Booking Form ---
    match /routes/{routeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /buses/{busId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /referrals/{referralId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // --- PAYMENT FLOW PERMISSIONS ---
    // Allow the server to read Hubtel settings for payment processing
    match /settings/hubtel {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Allow anyone to create a temporary booking document before payment
    match /pending_bookings/{bookingId} {
      allow create: if true;
      // Other operations (read, delete) are handled by the server
    }

    // --- ADMIN-ONLY ACCESS ---
    // Secure all other collections (bookings, passengers, users, etc.)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
